<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <!--Linear Layout for title of app-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:id="@+id/title_layout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#52db02"
            android:text="@string/terminal_heading"
            android:fontFamily="monospace"
            android:textStyle="bold"
        />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/myTextView"
            android:background="#52db02"/>


    </LinearLayout>

    <!--Linear Layout for Command List-->

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/commandlist_heading"
            android:textColor="#52db02"
            android:textStyle="italic"
            android:textSize="18dp"/>

        <View
            android:layout_width="114dp"
            android:layout_height="1dp"
            android:background="#52db02"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/command_list"
            android:textSize="15dp"
            android:textColor="#52db02"
            android:fontFamily="monospace"
            android:layout_marginTop="5dp"/>








    </LinearLayout>

    

    <!--Linear layout for helper text-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="You can add a new Terminal Window, by long pressing your home screen and clicking Widgets."
            android:textColor="#52db02"
            android:gravity="center"
            android:textSize="17dp"
            />







        </LinearLayout>


    <!--Credits Layout-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/credits_layout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credits"
            android:gravity="center"
            android:textColor="#52db02"
            android:textSize="17dp"
            android:fontFamily="sans-serif"/>





    </LinearLayout>

</LinearLayout>